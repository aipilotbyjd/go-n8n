# Application
APP_NAME=go-n8n
APP_ENV=development
APP_PORT=8080
APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=n8n_user
DB_PASSWORD=n8n_password
DB_NAME=n8n_db
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE=5
DB_MAX_LIFETIME=5m

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
JWT_ISSUER=go-n8n

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Request-ID
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# Engine
ENGINE_MAX_PARALLEL_EXECUTIONS=10
ENGINE_MAX_EXECUTION_TIME=3600s
ENGINE_WORKER_COUNT=5
ENGINE_QUEUE_SIZE=1000
ENGINE_MAX_RETRIES=3
ENGINE_RETRY_BACKOFF=1m

# Node Execution
NODE_MAX_EXECUTION_TIME=300s
NODE_ENABLE_DYNAMIC_LOADING=true
NODE_SANDBOX_EXECUTION=true

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./storage

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@go-n8n.local

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Feature Flags
FEATURE_TEAMS=false
FEATURE_MARKETPLACE=false
FEATURE_CUSTOM_NODES=true
FEATURE_WEBHOOK_TUNNEL=false

# Webhook
WEBHOOK_URL=http://localhost:8080
WEBHOOK_TIMEOUT=30s
WEBHOOK_MAX_SIZE=10485760

# Security
SECURITY_BCRYPT_COST=12
SECURITY_API_KEY_LENGTH=32
SECURITY_SESSION_LIFETIME=24h

# Worker
WORKER_CONCURRENCY=10
WORKER_QUEUE_NAME=workflow-executions
WORKER_RETRY_MAX=3
WORKER_RETRY_DELAY=30s
